/* pages/my/my.wxss */
.UCenter-bg {
  height: 550rpx;
  position: relative;
  overflow: hidden;
  position: relative;
}

.UCenter-bg image {
  margin-top: 0px;
  height: 550rpx;
  width: 100%;
}

.UCenter-bg .content {
  position: absolute;
  top: 50rpx;
  height: 500rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: rgb(51, 121, 153);
  font-weight: 500;
  text-shadow: 0 0 2px rgba(0, 0, 0, 0.3);
}

.UCenter-bg .png {
  width: 100px;
  z-index: 10;
  border: 1px solid rgb(51, 121, 153);
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}
.margin-top{
  margin-top: 40rpx;
}
.list{
  height: 50px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
