/* pages/my/my.wxss */
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
@import "/colorui/animation.wxss";

.UCenter-bg {
  height: 550rpx;
  position: relative;
  overflow: hidden;
  position: relative;
}

.UCenter-bg image {
  margin-top: 0px;
  height: 550rpx;
  width: 100%;
}

.UCenter-bg .content {
  position: absolute;
  top: 50rpx;
  height: 500rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: rgb(51, 121, 153);
  font-weight: 500;
  text-shadow: 0 0 2px rgba(0, 0, 0, 0.3);
}

.imgContainer{
  width: 100px;
  height: 100px;
  border: 1px solid rgb(51, 121, 153);
}

.UCenter-bg .png {
  width: 100px;
  z-index: 10;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}
.margin-top{
  margin-top: 40rpx;
}
.list{
  height: 50px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.list-bar-text{
  flex: 1;
  justify-content: flex-start;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10px;
}

.list-bar-text .text{
  padding:20rpx;
}

.list-bar-icon{
  flex: 1;
}

.list-bar-icon .icon{
  display: flex;
  justify-content: flex-end;
  padding:36rpx;
}