page {
    background-color: white !important;
    width: 100%;
    height: 100vh;
}

.major {
    max-width: 200rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.search {
    position: relative;
}

.searchIndex {
    margin: 0 auto;
    /* height: 420rpx; */
    width: 92%;
}

.search-form {
    background-color: rgb(0, 0, 0, 0.05) !important;
}

.bottom-end {
    text-align: center;
}

.selectList {
    background-color: white;
    /* padding: 0 10rpx; */
    width: 150rpx;
    position: absolute;
    top: 90rpx;
    z-index: 1000;
    overflow: hidden;
    animation: myfirst 0.5s;
    display: flex;
    flex-direction: column;
    height:480rpx;
    border: 1rpx solid #eee;
    margin-left: 10rpx;
}
@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: 480rpx;
    }
}

.solid-bottom{
    border-bottom: 1rpx solid #eee;
}
    

