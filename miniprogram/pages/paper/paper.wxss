/* pages/paper/paper.wxss */
page {
    width: 100%;
    height: 100vh;
    /* background-color: rgba(240, 240, 240,0.5) !important; */
}

.bottom {
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    background-color: white;
    position: absolute;
    bottom: 0;
    border: 1rpx solid rgba(231, 224, 224, 0.667);
}

.border {
    border-right: 1rpx solid rgba(231, 224, 224, 0.667);
}

.two-btn {
    width: 50%;
}

.one-btn {
    width: 100%;
}

/* modal */
.modal {
    border-top-right-radius: 30rpx !important;
    border-top-left-radius: 30rpx !important;
}

.middle-modal {
    border-radius: 30rpx !important;
}

/* 按钮 */
.btn {
    width: 150rpx !important;
    background-color: #7aafd3;
}
/* 底部评论模态框 */
.comment-modal{
    height: 70%;
    border-top-right-radius: 30rpx !important;
    border-top-left-radius: 30rpx !important;
  }
  .comment-text{
    background-color: rgba(200,200,200,0.1);
    margin-bottom: 20rpx;
    height: 200rpx;
    width: 90%;
    border-radius: 20rpx;
    text-align: left;
  }