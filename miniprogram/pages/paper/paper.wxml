<!-- pages/paper/paper.wxml -->
<cu-custom bgColor="bg-gradual-blue">
  <!-- <view slot="backText">返回</view> -->
  <view slot="content">试卷</view>
</cu-custom>
<!-- <text class="text-xl">试卷页面</text> -->
<!-- 单选 -->
<singleAnswer
id="singleAnswer" 
wx:if="{{displayQuestion.type == 1}}" 
question="{{displayQuestion}}" 
index="{{questionIndex + 1}}" 
bind:updateAnswer="submitAnwer"></singleAnswer>
<!-- 多选 -->
<multipleChoice
 id="multipleChoice"
 wx:if="{{displayQuestion.type == 2}}" 
 question="{{displayQuestion}}" 
 index="{{questionIndex + 1}}"
 bind:updateAnswer="submitAnwer"></multipleChoice>
<!-- 判断 -->
<judge
id="judge" 
wx:if="{{displayQuestion.type == 4}}" 
question="{{displayQuestion}}" 
index="{{questionIndex + 1}}"
bind:updateAnswer="submitAnwer"></judge>
<!-- 填空 -->
<fill
id="fill"
 wx:if="{{displayQuestion.type == 3}}" 
 question="{{displayQuestion}}" 
 index="{{questionIndex + 1}}"
 bind:updateAnswer="submitAnwer"></fill>
<!-- 主观 --> 
<subjective 
id="subjective"
wx:if="{{displayQuestion.type == 5}}" 
question="{{displayQuestion}}" 
index="{{questionIndex + 1}}"
bind:updateAnswer="submitAnwer"></subjective>
<!-- 答案 -->
<view wx:if="{{status == '20003'}}">
  <view class="score margin-top-xl margin-left text-lg">
    <view 
    wx:if="{{displayQuestion.judge==true}}"
    class="text-green">你答对了,正确答案 {{displayQuestion.correct}}  </view>
    <view 
    wx:if="{{displayQuestion.judge==false}}"
    class="text-red text-lg">你答错了,正确答案 {{displayQuestion.correct}} </view>
  </view>
</view>
<view class="bottom text-lg">
  <!-- 第一个状态 -->
    <view class="flex justify-center one-btn"
    wx:if="{{questionIndex == 0?true:false}}"
     bind:tap="nextQuestion">下一题</view>
  <!-- 第二个状态 -->
  <view wx:elif="{{questionIndex < length}}" style="width:100%" class="flex">
    <view class="flex justify-center border two-btn" bind:tap="preQuestion">上一题 </view>
    <view class="flex justify-center two-btn" bind:tap="nextQuestion">下一题 </view>
  </view>
    <!-- 第三个状态 -->
  <view wx:elif="{{questionIndex == length}}" style="width:100%" class="flex">
    <view class="flex justify-center border two-btn" bind:tap="preQuestion">上一题</view>
    <view class="flex justify-center two-btn" bind:tap="lastQuestion">{{btn}}</view>
  </view> 
</view>