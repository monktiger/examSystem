/* pages/editSingle/editSingle.wxss */

.ans-title {
  display: block;
  margin: 10rpx 60rpx;
}

.option-container {
  background-color: #fff;
  padding: 0 50rpx;
}

.option-group{
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  border-bottom: 1px solid rgb(214, 214, 214);
}

.option-container radio {
  zoom: 0.8;
  vertical-align: middle;
}

.option-container text {
  font-size: 40rpx;
  vertical-align: middle;
}

.add-option {
  background-color: #fff;
  padding: 10rpx 60rpx;
  border-top: 1px solid rgb(214, 214, 214);
}

.cuIcon-roundaddfill{
  font-size: 40rpx;
  vertical-align: middle;
}

.radio-group{
  width: 100%;
}