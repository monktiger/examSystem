page{
    width: 100%;
    height: 100vh;
    background-color: #ffff;
}
.box{
    border: 1rpx solid #4b93c4;
    border-radius: 20rpx;
    position: relative;
}
.tag{
    border-radius: 20rpx;
    height: 40rpx;
    width: 40rpx;
    bottom: -20rpx;
    left: 50%;
    margin-left: -20rpx;
    position: absolute;
}
.btn{
    width: 300rpx !important;
    margin: 40rpx auto 0 auto;
    letter-spacing: 4rpx;
}